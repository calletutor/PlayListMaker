<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/audio_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/search_dual_color_background"
    android:orientation="vertical"
    app:titleTextColor="@color/dual_color"

    >

    <!--android:background="@android:color/holo_red_light"-->
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <!--app:title="@string/settings"-->
        <!--app:titleTextColor="@color/dual_color"-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolbarStyle"
            app:navigationIcon="@drawable/arrow_back"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextAppearance="@style/ToolbarTitleTextStyle" />

    </LinearLayout>

    <!--android:background="@android:color/holo_blue_light"-->
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:gravity="center"
        android:orientation="horizontal">
        <!--
                    android:layout_width="312dp"
                    android:layout_height="312dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
        -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            tools:srcCompat="@drawable/place_holder2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/ys_display_medium"
            android:hint="trackName"
            android:maxLines="1"
            android:paddingStart="30dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:textColor="@color/dual_color"
            android:textSize="@dimen/text_size_22" />

        <!--android:paddingLeft="6dp"-->
        <TextView
            android:id="@+id/artistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/ys_display_medium"
            android:hint="artistName"
            android:maxLines="1"
            android:paddingStart="30dp"
            android:textColor="@color/dual_color"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>
    <!--android:background="@android:color/holo_blue_light"-->
    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.13"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/add_button" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/play_button" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/favorites_button" />

    </LinearLayout>

    <!--android:background="@android:color/holo_red_light"-->
    <LinearLayout
        android:id="@+id/layout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.06"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center"
            android:text="0:30"
            android:textColor="@color/dual_color"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <!--android:background="@android:color/holo_blue_light"-->
    <LinearLayout
        android:id="@+id/layout6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical">
        <!--/////////////////////////////////////////////////////////-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="start"
                android:paddingStart="20dp"
                android:text="@string/time"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/trackTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="end"
                android:hint="trackTime"
                android:paddingEnd="20dp"
                android:textColor="@color/dual_color"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="start"
                android:paddingStart="20dp"
                android:text="@string/album"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/album"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="end"
                android:hint="album"
                android:paddingEnd="20dp"
                android:textColor="@color/dual_color"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="start"
                android:paddingStart="20dp"
                android:text="@string/year"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="end"
                android:hint="year"
                android:paddingEnd="20dp"
                android:textColor="@color/dual_color"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="start"
                android:paddingStart="20dp"
                android:text="@string/genre"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/genre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="end"
                android:hint="genre"
                android:paddingEnd="20dp"
                android:textColor="@color/dual_color"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="start"
                android:paddingStart="20dp"
                android:text="@string/country"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="end"
                android:hint="country"
                android:paddingEnd="20dp"
                android:textColor="@color/dual_color"
                android:textSize="13sp" />
        </LinearLayout>
        <!--/////////////////////////////////////////////////////////-->
    </LinearLayout>
</LinearLayout>
